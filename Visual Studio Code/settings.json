{
  "workbench.colorTheme": "Dracula Theme",
  "workbench.iconTheme": "vscode-icons-mac",
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "explorer.confirmDelete": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.formatOnSave": true,
  "editor.fontFamily": "FiraCode Nerd Font, MesloLGS Nerd Font, monospace",
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.smoothScrolling": true,
  "terminal.integrated.fontLigatures.enabled": true,
  "breadcrumbs.enabled": false,
  "terminal.integrated.fontFamily": "MesloLGS Nerd Font",
  "update.showReleaseNotes": false,
  // ==========================================================================================

  // DESTAQUES: #0088FF (AZUL)
  // ERROS: #FF3434 (VERMELHO)
  // TEXTOS ATIVOS: #FEFEFE (BRANCO)
  // TEXTOS INATIVOS: #4D586E (CINZA BEM CLARO)
  // COR #1: #262F41 (CINZA CLARO)
  // COR #2: #141B28 (CINZA)
  // COR #3: #0B1119 (CINZA ESCURO)
  // COR #4: #020507 (PRETO)

  // ==========================================================================================

  "workbench.colorCustomizations": {
    // ========================== COR SELECTION NO EDITOR ==========================
    "editor.selectionBackground": "#ffffff30",
    "editor.selectionHighlightBackground": "#ffffff05",
    "editor.wordHighlightBackground": "#ffffff25",
    "editor.wordHighlightStrongBackground": "#0055ff76",
    "editor.hoverHighlightBackground": "#0088FF30",

    // =========================== CUSTOMIZAÇÃO DA INTERFACE COR #1 ===========================

    "sideBarSectionHeader.background": "#262F41",
    "input.background": "#262F41",
    "editor.lineHighlightBackground": "#262F41",
    "list.activeSelectionBackground": "#262F41",
    "list.focusBackground": "#262F4180",
    "list.hoverBackground": "#262F4160",
    "button.background": "#262F41",
    "dropdown.background": "#262F41",
    "editor.rangeHighlightBackground": "#262F41fe",

    // =========================== CUSTOMIZAÇÃO DA INTERFACE COR #2 ===========================

    "sideBar.background": "#141B28",
    "editor.background": "#141B28",
    "tab.activeBackground": "#141B28",

    // =========================== CUSTOMIZAÇÃO DA INTERFACE COR #3 ===========================

    "editorGutter.background": "#0B1119",
    "terminal.background": "#0B1119",
    "editorGroupHeader.tabsBackground": "#0B1119",
    "tab.inactiveBackground": "#0B1119",
    "activityBar.activeBackground": "#0B1119",
    "titleBar.inactiveBackground": "#0B1119",
    "statusBar.noFolderBackground": "#0B1119",
    "editorWidget.background": "#0B1119",
    "list.inactiveSelectionBackground": "#0B111980",

    // =========================== CUSTOMIZAÇÃO DA INTERFACE COR #4 ===========================

    "statusBar.background": "#020507",
    "activityBar.background": "#020507",
    "titleBar.activeBackground": "#020507",
    "panel.background": "#020507",
    "widget.shadow": "#020507",
    "tab.hoverBackground": "#020507",

    // =========================== CUSTOMIZAÇÃO DA CORES DE DESTAQUE ==========================
    "progressBar.background": "#0088FF",
    "activityBarBadge.background": "#0088FF",
    "editorWidget.border": "#0088FF",
    "focusBorder": "#0088FF",
    "list.highlightForeground": "#0088FF",
    "panelTitle.activeBorder": "#0088FF",
    "list.focusOutline": "#0088FF",
    "activityBar.activeBorder": "#0088FF",
    "tab.activeBorderTop": "#0088FF",
    "editorIndentGuide.activeBackground1": "#0088FF",
    "selection.background": "#0088FF40",

    // =========================== CUSTOMIZAÇÃO TEXTO ATIVO ==========================

    "panelTitle.activeForeground": "#FEFEFE",
    "activityBar.foreground": "#FEFEFE",
    "list.activeSelectionForeground": "#FEFEFE",
    "foreground": "#FEFEFE",
    "titleBar.activeForeground": "#FEFEFE",
    "input.foreground": "#FEFEFE",
    "activityBarBadge.foreground": "#FEFEFE",
    "sideBarTitle.foreground": "#FEFEFE",
    "sideBarSectionHeader.foreground": "#FEFEFE",
    "editor.foreground": "#FEFEFE",
    "tab.activeForeground": "#FEFEFE",
    "editorCursor.foreground": "#FEFEFE",
    "statusBar.debuggingForeground": "#FEFEFE",
    "statusBar.foreground": "#FEFEFE",
    "editorLineNumber.activeForeground": "#FEFEFE",
    "debugConsole.infoForeground": "#FEFEFE",
    "input.placeholderForeground": "#FEFEFE50",
    "button.foreground": "#FEFEFE",

    // ========================== CUSTOMIZAÇÃO TEXTO INATIVO =========================

    "titleBar.inactiveForeground": "#4D586E",
    "activityBar.inactiveForeground": "#4D586E",
    "editorLineNumber.foreground": "#4D586E",
    "tab.inactiveForeground": "#4D586E",
    "panelTitle.inactiveForeground": "#4D586E",
    "debugConsole.sourceForeground": "#4D586E",
    "editor.inactiveSelectionBackground": "#4D586E90",
    "editorIndentGuide.background1": "#4D586E90",
    "tree.indentGuidesStroke": "#4D586E90",

    // ============================ CUSTOMIZAÇÃO DE ERROS ===========================

    "errorForeground": "#E00000",
    "statusBar.debuggingBackground": "#E00000",
    "editorError.foreground": "#E00000",
    "debugConsole.errorForeground": "#E00000",

    // =============================== TRANSPARENTES ================================

    "titleBar.border": "#00000000",
    "input.border": "#00000000",
    "activityBar.border": "#00000000",
    "sideBar.border": "#00000000",
    "sideBarSectionHeader.border": "#00000000",
    "panel.border": "#00000000",
    "tab.border": "#00000000",
    "editor.selectionHighlightBorder": "#00000000",
    "editor.wordHighlightBorder": "#00000000",
    "editor.findMatchBorder": "#00000000",
    "dropdown.border": "#00000000",

    // =========================== DEMAIS CUSTOMIZAÇÕES DA INTERFACE ==========================

    "editor.findMatchBackground": "#FFC640E2",

    "editor.findMatchHighlightForeground": "#000000E7",
    "editor.findMatchHighlightBackground": "#EAFF0037",
    "editor.findMatchHighlightBorder": "#EAFF0070",

    "debugConsole": "default",
    "editorWhitespace.foreground": "default",

    "button.hoverBackground": "default",
    "dropdown.listBackground": "default",

    // =========================== CUSTOMIZAÇÃO DO TERMINAL ===========================
    "terminal.foreground": "#F8F8F2",
    "terminal.ansiBlack": "#21222C",
    "terminal.ansiRed": "#ff4444",
    "terminal.ansiGreen": "#3aff6c",
    "terminal.ansiYellow": "#F1FA8C",
    "terminal.ansiBlue": "#b37dff",
    "terminal.ansiMagenta": "#f85fb6",
    "terminal.ansiCyan": "#79e6ff",
    "terminal.ansiWhite": "#F8F8F2",
    "terminal.ansiBrightBlack": "#6c717d",
    "terminal.ansiBrightRed": "#ff5d5d",
    "terminal.ansiBrightGreen": "#58ff88",
    "terminal.ansiBrightYellow": "#FFFFA5",
    "terminal.ansiBrightBlue": "#D6ACFF",
    "terminal.ansiBrightMagenta": "#ff82da",
    "terminal.ansiBrightCyan": "#A4FFFF",
    "terminal.ansiBrightWhite": "#2a2d37"
  },

  // ===================================================================
  // == 2. CUSTOMIZAÇÃO DO CÓDIGO (SYNTAX HIGHLIGHTING)              ==
  // ===================================================================
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Comentários",
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": { "foreground": "#979797", "fontStyle": "italic" }
      },
      {
        "name": "Strings de texto",
        "scope": ["string", "punctuation.definition.string"],
        "settings": { "foreground": "#F1FA8C" }
      },
      {
        "name": "Números",
        "scope": "constant.numeric",
        "settings": { "foreground": "#BD93F9" }
      },
      {
        "name": "Constantes e Variáveis 'this', 'self'",
        "scope": ["constant.language", "variable.language.this"],
        "settings": { "foreground": "#BD93F9", "fontStyle": "bold" }
      },
      {
        "name": "Palavras-chave (if, else, for, function, const, let)",
        "scope": ["keyword", "storage.type", "storage.modifier"],
        "settings": { "foreground": "#FF79C6" }
      },
      {
        "name": "Operadores (=, +, -, *, &&, ||)",
        "scope": "keyword.operator",
        "settings": { "foreground": "#FF79C6" }
      },
      {
        "name": "Nomes de Funções e Métodos",
        "scope": [
          "entity.name.function",
          "support.function",
          "meta.function-call"
        ],
        "settings": { "foreground": "#50FA7B" }
      },
      {
        "name": "Variáveis, Parâmetros e Propriedades de Objetos",
        "scope": [
          "variable",
          "meta.definition.variable.js",
          "support.variable",
          "variable.parameter",
          "variable.other.property"
        ],
        "settings": { "foreground": "#F8F8F2" }
      },
      {
        "name": "Nomes de Classes, Tipos e Interfaces",
        "scope": [
          "entity.name.type",
          "entity.name.class",
          "entity.name.interface",
          "support.class"
        ],
        "settings": { "foreground": "#8BE9FD", "fontStyle": "italic" }
      },
      {
        "name": "Tags HTML/XML",
        "scope": "entity.name.tag",
        "settings": { "foreground": "#FF79C6" }
      },
      {
        "name": "Atributos de Tags HTML/XML",
        "scope": "entity.other.attribute-name",
        "settings": { "foreground": "#50FA7B" }
      },
      {
        "name": "Marcadores de Pontuação ({, }, (, ), [, ])",
        "scope": "punctuation",
        "settings": { "foreground": "#F8F8F2" }
      },
      {
        "name": "JSON - Chaves",
        "scope": "support.type.property-name.json",
        "settings": { "foreground": "#8BE9FD" }
      },
      {
        "name": "Markdown - Títulos",
        "scope": "markup.heading",
        "settings": { "foreground": "#FF79C6", "fontStyle": "bold" }
      },
      {
        "name": "Markdown - Negrito",
        "scope": "markup.bold",
        "settings": { "foreground": "#F1FA8C", "fontStyle": "bold" }
      },
      {
        "name": "Markdown - Itálico",
        "scope": "markup.italic",
        "settings": { "foreground": "#F1FA8C", "fontStyle": "italic" }
      },
      {
        "name": "Markdown - Links",
        "scope": "markup.underline.link",
        "settings": { "foreground": "#BD93F9" }
      }
    ]
  }
}
